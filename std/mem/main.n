fn read_f32_le([u8] buf):f32! {
    if buf.len() < 4 {
        throw errorf('buffer too small')
    }
    
    u32 bits = (buf[3] as u32) << 24 | (buf[2] as u32) << 16 | (buf[1] as u32) << 8 | (buf[0] as u32)
    
    f32 result = 0.0
    libc.memmove(&result as anyptr, &bits as anyptr, 4)
    
    return result
}

