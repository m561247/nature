import libc

fn copy<T>([u8] buf, rawptr<T> dst):void! {
    int size = @sizeof(T)
    if size == 0 {
        throw errorf('type size failed')   
    }
    if buf.len() < size {
        throw errorf('buffer too small')
    }

    libc.memmove(dst as anyptr, buf.ref(), size as u64)
}

fn write_u8_le(u8 i):[u8]! {
    return [i]
}

fn write_u16_le(u16 i):[u8]! {
    return [
        (i & 0xFF) as u8,
        ((i >> 8) & 0xFF) as u8,
    ]
}

fn write_u32_le(u32 i):[u8]! {
    return [
        (i & 0xFF) as u8,
        ((i >> 8) & 0xFF) as u8,
        ((i >> 16) & 0xFF) as u8,
        ((i >> 24) & 0xFF) as u8,
    ]
}

fn write_u64_le(u64 i):[u8]! {
    return [
        (i & 0xFF) as u8,
        ((i >> 8) & 0xFF) as u8,
        ((i >> 16) & 0xFF) as u8,
        ((i >> 24) & 0xFF) as u8,
        ((i >> 32) & 0xFF) as u8,
        ((i >> 40) & 0xFF) as u8,
        ((i >> 48) & 0xFF) as u8,
        ((i >> 56) & 0xFF) as u8,
    ]
}

